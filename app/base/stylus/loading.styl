#overlays
	width 100%
	height 100%

	#loading-bg
		position fixed
		display none
		top 0
		left 0
		z-index 10000
		width 100%
		height 100%
		background-color #000
		-ms-filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=40)')
		filter unquote('alpha(opacity=40)')
		-moz-opacity 0.4
		-khtml-opacity 0.4
		opacity 0.4
		
	#loading-img
		position fixed
		display none
		z-index 11000
		top 50%
		left 50%
		margin-left -82px
