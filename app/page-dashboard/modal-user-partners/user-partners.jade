// ko with: $root.UserPartnersModal

#user-partners.modal(role='dialog', aria-labelledby='dialog-title')
	a.close(data-bind='click:destroyIconClick') Close
	h1#dialog-title Add Default Partners

	form(data-bind="submit:submitPartners.call")
		include ../../base/jade/error-handling

		.text-wrapper
			div Please select up to 5 partners from the sections below. These selections will be added to your homepage for easy acces and to narrow the focus of your workflow.
			div At anytime you can change the partners by checking/unchecking the selctions again from the link labeled "My Settings" from the top right of the ORS website.

		.radio-wrapper
			.title Select 
				span.strong one 
				span to 
				span.strong five 
				span partners
			.container(data-bind="foreach:allPartners")
				.each
					input(data-bind="click:$parent.checkboxClicked, attr:{id:partnerName}", type="checkbox")
					label(data-bind="text:partnerName, attr:{for:partnerName}")
			.clear
					

		.submit-wrapper
			button(class="btn-submit", type="submit") Add Partners
			.clear
