#sidebar
	width 300px
	border-right 1px solid #D6D6D6
	min-height 500px
	float left 

	.search
		position relative
		width 230px
		background-color #f7f7f7
		border 1px solid #E8E8E8
		margin 18px auto 0
		padding 7px 15px 12px

		.messages
			margin 5px 7px 0 2px !important

		table
			width 100%
			margin 0 auto

			tr
				td
					height 35px

				td:first-child
					width 60px

				label
					color #666666

				select
					width 99%

				input[type="text"]
					width 90%
					padding 7px

				button
					display block
					float right
					margin 5px 2px 0 0

	.container
		position relative
		width 230px
		margin 22px auto
		background-color #f7f7f7
		border 1px solid #E8E8E8
		padding 15px

		.title 
			font-size 16px
			font-weight 700

		.more
			display block
			float right
			margin-top 5px

		ol
			margin 10px 0 3px 18px

			li
				margin-bottom 7px

		ul
			margin 5px 0 0 0

			li 
				padding 5px 0

				.triangle-wrapper:hover
					
					.closed
						border-top 6px solid transparent
						border-bottom 6px solid transparent
						border-left 6px solid #0096D6

					.open
						border-top 6px solid #0096D6
						border-right 6px solid transparent
						border-left 6px solid transparent

				.triangle-wrapper
					cursor pointer
					float left
					width 15px
					height 15px

					.closed
						width 0
						height 0
						border-top 6px solid transparent
						border-bottom 6px solid transparent
						border-left 6px solid #00467F
						position relative
						top 2px
						cursor pointer

					.open
						width 0
						height 0
						border-top 6px solid #00467F
						border-right 6px solid transparent
						border-left 6px solid transparent
						position relative
						top 7px
						right 3px
						cursor pointer

				.link:hover
					cursor pointer
					text-decoration underline

				.text
					display block
					font-size 15px

				.more-info
					display none
					margin 7px 0 2px 12px

					.child-pages
						display none
						margin 3px 0 8px 24px

					.root-page
						margin-bottom 2px



			

