#sidebar
	width 300px
	border-right 1px solid #D6D6D6
	min-height 500px
	float left 

	.search
		position relative
		width 230px
		background-color #f7f7f7
		border 1px solid #E8E8E8
		margin 18px auto 0
		padding 7px 15px 12px

		.messages
			margin 5px 7px 0 2px !important

		table
			width 100%
			margin 0 auto

			tr
				td
					height 35px

				td:first-child
					width 60px

				label
					color #666666

				select
					width 99%

				input[type="text"]
					width 90%
					padding 7px

				button
					display block
					float right
					margin 5px 2px 0 0

	.partners
		position relative
		width 230px
		margin 22px auto
		background-color #f7f7f7
		border 1px solid #E8E8E8
		padding 15px

		.title 
			font-size 16px
			font-weight 700

		ul
			margin 5px 0 0 0

			li 
				padding 5px 0

				.closed
					float left
					width 0
					height 0
					border-top 6px solid transparent
					border-bottom 6px solid transparent
					border-left 6px solid #00467F
					position relative
					top 2px
					margin-right 7px

				.open
					float left
					width 0
					height 0
					border-top 6px solid #00467F
					border-right 6px solid transparent
					border-left 6px solid transparent
					position relative
					top 7px
					right 3px
					margin-right 1px

				.text:hover
					cursor pointer
					text-decoration underline

				.text
					font-size 15px

				.more-info
					display none
					margin 2px 0 2px 14px

					a
						display block
						padding 2px


			

