// ko if: currentPage && currentPage() !== 'LoginPage'
#sidebar

	.search
		form(data-bind="submit:$root.sidebarSearch")
			// ko if: searchErrors
			.messages.err(data-bind="text:searchErrors")
			// /ko

			table
				tbody
					tr
						td: label(for="searchPartners") Partner:
						td
							select(id="searchPartners", name="partner", data-bind="foreach:$root.allPartners")
								option(data-bind="text:partnerName, attr:{value:id}") 
					tr
						td: label(for="searchString") Search:
						td: input(type="text", name="query")
					tr
						td(colspan="2")
							button(class="btn-submit", type="submit") Search
							.clear
	.container
		.title Global Announcements
		ul
			li: .text
				a(href="javascript:void(0)") - Canada GM call center opening
			li: .text
				a(href="javascript:void(0)") - Maserati is an awesome car
			li: .text
				a(href="javascript:void(0)") - This site is so cool who made it?
			li: .text
				a(href="javascript:void(0)") - More

	// ko if: $root.userPartners().length > 0
	.container
		.title Your Default Partners
		ul(data-bind="foreach:$root.userPartners")
			li
				.closed(data-bind="attr:{id:'user-triangle-' + id}")
				.text.user(data-bind="click:$root.displayMoreInfo, text:partnerName")
				.clear
				.more-info(data-bind="attr:{id:'user-more-info-' + id}")
					a(href="javascript:void(0)") - Partner Information
					a(href="javascript:void(0)") - Benefits and Services
					a(href="javascript:void(0)") - Phone Numbers 
					a(href="javascript:void(0)") - LCD Readouts
	// /ko

	// ko if: $root.allPartners().length > 0
	.container
		.title All Partners
		ul(data-bind="foreach:$root.allPartners")
			li
				.closed(data-bind="attr:{id:'all-triangle-' + id}")
				.text.all(data-bind="click:$root.displayMoreInfo, text:partnerName")
				.clear
				.more-info(data-bind="attr:{id:'all-more-info-' + id}")
					a(href="javascript:void(0)") - Partner Information
					a(href="javascript:void(0)") - Benefits and Services
					a(href="javascript:void(0)") - Phone Numbers 
					a(href="javascript:void(0)") - LCD Readouts
	// /ko
// /ko