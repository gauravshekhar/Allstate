#header
	background-color #FCFCFC
	border 1px solid #D6D6D6
	//margin 10px auto 0
	margin 0 auto
	padding 10px
	width 981px


	.logo-wrapper
		position relative
		width 320px
		float left

		img
			display block

		.addon
			background-color #FFFFFF;
			position absolute
			bottom 24px
			left 50px
			color #CCCCCC
			font-size 11px
			font-weight 700
			text-align right
			width 115px

		.logo-title
			color #0096D6
			font-weight 700
			margin 10px 0 0 10px

	.right
		float left
		margin-top 5px
		
		ul
			font-size 13px
			display block

			li
				display inline
				margin 0 8px 0 0

				a
					color #444
				a:hover
					text-decoration underline

	.welcome
		color #0096D6
		font-weight 700
		font-size 15px
		margin-top 11px

